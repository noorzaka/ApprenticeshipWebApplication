@model ApprenticeshipWebApplication.Entities.Report

<h2>Report Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Report Name</dt>
        <dd class="col-sm-10">@Model.reportName</dd>

        <dt class="col-sm-2">Report Description</dt>
        <dd class="col-sm-10">@Model.reportDescription</dd>
        <dt class="col-sm-2">Report Notes</dt>
        <dd class="col-sm-10">@Model.reportNotes</dd>
        <dt class="col-sm-2">Report Documents</dt>
        @foreach (var file in ViewBag.reportDoc)
        {
           <div><a href="/Student/GetDocument?documentId=@file.documentId">@file.documentName</a></div>
        }
    </dl>
</div>

