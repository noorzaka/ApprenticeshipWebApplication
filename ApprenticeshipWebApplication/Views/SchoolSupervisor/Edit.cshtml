@using ApprenticeshipWebApplication.Entities
@using ApprenticeshipWebApplication.DTO
@model UpdateSchoolSupervisorDTO
<div class="container-fluid">

    <form action="/SchoolSupervisor/Update">
        <h2>Edit School Supervisor Info.</h2>
        <hr />
        <input type="hidden" asp-for="Id" />

        <div class="form-floating">
            <label asp-for="firstName">First Name</label>
            <input asp-for="firstName" class="form-control" />
        </div>
        <div class="form-floating">
            <label asp-for="secondName">Second Name</label>
            <input asp-for="secondName" class="form-control" />
        </div>
        <div class="form-floating">
            <label asp-for="thirdName">Third Name</label>
            <input asp-for="thirdName" class="form-control" />
        </div>
        <div class="form-floating">
            <label asp-for="lastName">Last Name</label>
            <input asp-for="lastName" class="form-control" />
        </div>

        <div class="form-floating">
            <label asp-for="phoneNumber">Phone Number</label>
            <input asp-for="phoneNumber" class="form-control" />
        </div>

        <div class="form-floating">
            <label>School</label>
            <select name="schoolId" class="form-control">
                @foreach (var c in (List<School>)ViewBag.schools)
                {
                    @if (Model.schoolId == c.schoolId)
                    {
                        <option selected="selected" value="@c.schoolId">@c.schoolName</option>
                    }
                    else
                    {
                        <option value="@c.schoolId">@c.schoolName</option>
                    }
                }
            </select>
        </div>

        <button type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
    </form>
</div>
